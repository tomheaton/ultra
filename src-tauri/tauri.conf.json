{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hyper-two",
  "version": "0.1.0",
  "identifier": "dev.tomheaton.hyper-two",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "hyper-two",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "windowEffects": {
          "effects": ["mica", "blur"],
          "state": "active"
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
